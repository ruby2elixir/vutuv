
  <div class="profile-header">
    <div class="profile-header__info">
      <h1><%= gettext "Show tag localization" %></h1>
    </div>
  </div>
</header>
<%= render Vutuv.LayoutView, "flash.html", assigns %>

<div class="breadcrumbs">
<%= Vutuv.UserHelpers.gen_breadcrumbs([
      {gettext("Tag localizations"), admin_tag_localization_path(@conn, :index)},
      gettext("Show")]) %>
</div>

<div class="card-list">
  <section class="card">
    <div class="card__edit button__list">
      <%= link to: admin_tag_localization_path(@conn, :edit, @tag_localization), class: "button button-link button--icon button--small" do %>
        <i class="icon icon--edit"></i>
      <% end %>
      <%= button to: admin_tag_localization_path(@conn, :delete, @tag_localization), method: :delete, class: "button button-link button--icon button--small", form: [class: "button button--icon button--small"] do %>
        <i class="icon icon--delete"></i>
      <% end %>
    </div>
    
      <h1>
        <strong><%= gettext "Tag" %>:</strong>
      </h1>
      <p>
        <%= to_string @tag_localization.tag  %>
      </p>
    
      <h1>
        <strong><%= gettext "Language" %>:</strong>
      </h1>
      <p>
        <%= to_string @tag_localization.locale %>
      </p>
    
      <h1>
        <strong><%= gettext "Name" %>:</strong>
      </h1>
      <p>
        <%= @tag_localization.name %>
      </p>
    
      <h1>
        <strong><%= gettext "Description" %>:</strong>
      </h1>
      <p>
        <%= @tag_localization.description %>
      </p>
    
  </section>
  <aside>
    <%= render Vutuv.SharedView, "_ad.html" %>
  </aside>
</div>
